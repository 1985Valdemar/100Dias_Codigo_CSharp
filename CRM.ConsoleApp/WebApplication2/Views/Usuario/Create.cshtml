<div class="container">
    <h1 class="mb-4">Cadastro Cliente</h1>

    <form id="cadastroForm" method="post" action="/Usuario/Create">
        <div class="form-group mb-3">
            <label for="nome">Nome:</label>
            <input type="text" class="form-control col-md-4" id="nome" name="nome" placeholder="Digite seu nome" required>
            <div class="invalid-feedback">NOME OBRIGATÓRIO</div>
        </div>

        <div class="form-group mb-3">
            <label for="sobrenome">Sobrenome:</label>
            <input type="text" class="form-control col-md-4" id="sobrenome" name="sobrenome" placeholder="Digite seu sobrenome">
        </div>

        <div class="form-group mb-3">
            <label for="cpf">CPF:</label>
            <input type="text" class="form-control col-md-4" id="cpf" name="cpf" placeholder="Digite seu CPF" required>
            <div class="invalid-feedback">CPF OBRIGATÓRIO</div>
        </div>

        <div class="form-group mb-3">
            <label for="telefone">Telefone:</label>
            <input type="text" class="form-control col-md-4" id="telefone" name="telefone" placeholder="Digite seu telefone">
        </div>

        <button type="submit" class="btn btn-primary">Enviar</button>
        <button type="button" class="btn btn-secondary" id="editarBtn">Editar</button>
        <button type="button" class="btn btn-danger" id="deletarBtn">Deletar</button>
    </form>
</div>
