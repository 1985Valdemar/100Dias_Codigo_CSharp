@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <h1 class="mb-4">Cadastro Cliente</h1>

    <form id="cadastroForm">
        <div class="form-group mb-3">
            <label for="nome">Nome:</label>
            <input type="text" class="form-control col-md-4" id="nome" placeholder="Digite seu nome" required>
            <div class="invalid-feedback">NOME OBRIGATÓRIO</div>
        </div>

        <div class="form-group mb-3">
            <label for="sobrenome">Sobrenome:</label>
            <input type="text" class="form-control col-md-4" id="sobrenome" placeholder="Digite seu sobrenome">
        </div>

        <div class="form-group mb-3">
            <label for="cpf">CPF:</label>
            <input type="text" class="form-control col-md-4" id="cpf" placeholder="Digite seu CPF" required>
            <div class="invalid-feedback">CPF OBRIGATÓRIO</div>
        </div>

        <div class="form-group mb-3">
            <label for="telefone">Telefone:</label>
            <input type="text" class="form-control col-md-4" id="telefone" placeholder="Digite seu telefone">
        </div>

        <button type="submit" class="btn btn-primary">Enviar</button>
        <button type="button" class="btn btn-primary" id="editarBtn">Editar</button>
        <button type="button" class="btn btn-primary" id="deletarBtn">Deletar</button>
    </form>
</div>

<script>
    // Validação do formulário
    document.getElementById('cadastroForm').addEventListener('submit', function (event) {
        var nome = document.getElementById('nome');
        var cpf = document.getElementById('cpf');

        if (!nome.value) {
            nome.classList.add('is-invalid');
        } else {
            nome.classList.remove('is-invalid');
        }

        if (!cpf.value) {
            cpf.classList.add('is-invalid');
        } else {
            cpf.classList.remove('is-invalid');
        }

        if (!nome.value || !cpf.value) {
            event.preventDefault();
        }
    });

    // Função para editar cadastro
    document.getElementById('editarBtn').addEventListener('click', function () {
        // Aqui você pode implementar a lógica para editar o cadastro
        alert("Função de editar cadastro não implementada.");
    });

    // Função para deletar cadastro
    document.getElementById('deletarBtn').addEventListener('click', function () {
        if (confirm("Tem certeza que deseja deletar este cadastro?")) {
            // Aqui você pode implementar a lógica para deletar o cadastro
            alert("Cadastro deletado.");
        }
    });
</script>

<style>
    .input-pequeno {
        width: 200px; /* Ajuste o valor conforme necessário */
    }
</style>
